<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dhtech.funnytime.com.timesup.TimesUpSetup">

    <TextView
        android:id="@+id/playerNumber"
        android:layout_width="240dp"
        android:layout_height="43dp"
        android:text="@string/text_playerNumber"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        android:textAlignment="center"
        app:layout_constraintRight_toLeftOf="@+id/playerNumberEdit"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toTopOf="@+id/wordsNumber"
        app:layout_constraintHorizontal_bias="1.0" />

    <EditText
        android:id="@+id/playerNumberEdit"
        android:layout_width="113dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="number"
        tools:ignore="MissingConstraints"
        app:layout_constraintBaseline_toBaselineOf="@+id/playerNumber"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/wordsNumber"
        android:layout_width="227dp"
        android:layout_height="39dp"
        android:text="@string/text_wordsNumber"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintRight_toLeftOf="@+id/wordsNumberEdit"
        android:layout_marginRight="9dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        android:layout_marginBottom="316dp"
        app:layout_constraintBottom_toTopOf="@+id/validation" />

    <EditText
        android:id="@+id/wordsNumberEdit"
        android:layout_width="107dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="number"
        tools:ignore="MissingConstraints"
        app:layout_constraintBaseline_toBaselineOf="@+id/wordsNumber"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/validation"
        android:layout_width="370dp"
        android:layout_height="56dp"
        android:text="Button"
        tools:layout_editor_absoluteX="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>
